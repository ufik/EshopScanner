<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >


    <EditTextPreference
        android:capitalize="words"
        android:defaultValue=""
        android:inputType="textCapWords"
        android:key="url"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_url" android:shouldDisableView="true"/>
    
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue=""
        android:inputType="textPassword"
        android:key="identificator"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_identificator" />
	
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue=""
        android:inputType="textPassword"
        android:key="token"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_token" />
    
    
</PreferenceScreen>
